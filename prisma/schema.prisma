// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Sex {
  PRIA
  WANITA
}

enum Pekerjaan {
  PETANI
  SWASTA
  PNS
  LAIN
}

enum StatusKeluarga {
  LENGKAP
  YATIM_PIATU
}

enum JenisTempatTinggal {
  RUMAH_SEDERHANA
  RUMAH_MENENGAH
}

enum Role {
  ADMIN
  MAHASISWA
}

enum StatusBerkas {
  DRAFT
  VALID
  INVALID
}

model Mahasiswa {
  id  Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nama String
  nik String
  noKk String
  noKontak String
  jk Sex
  alamat  String
  universitas String
  prodi   String
  pendidikan  String
  semester  String

  statusBerkas StatusBerkas   @default(DRAFT)

  penilaian Penilaian @relation(fields: penilaianId, references: [id])
  penilaianId Int

  user User?
}

model Penilaian {
  id  Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mahasiswa Mahasiswa?

  pendapatanKep Int
  pekerjaan Pekerjaan
  tanggungan Int
  statusKeluarga StatusKeluarga
  tempatTinggal JenisTempatTinggal
}

model User {
  id  Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username String @unique
  password  String
  role Role

  mahasiswa Mahasiswa? @relation(fields: mahasiswaId, references: [id])
  mahasiswaId Int?
}